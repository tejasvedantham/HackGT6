<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/informationpng"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:layout_below="@id/informationpng"


        android:id="@+id/firstName"
        android:text="First Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext_2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"

        android:id="@+id/lastName"
        android:text="Last Name"
        android:layout_below="@+id/firstName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext_2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"

        android:id="@+id/age"
        android:text="Age"
        android:layout_below="@+id/lastName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext_2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"

        android:id="@+id/gender"
        android:layout_below="@+id/age"
        android:text="Male"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:minWidth="40dp"

        android:id="@+id/updateHeight"
        android:layout_below="@+id/gender"
        android:entries="@array/height_array"
        android:spinnerMode="dropdown"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"

        android:id="@+id/updateWeight"
        android:hint="Weight"
        android:layout_below="@+id/updateHeight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext_2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"

        android:id="@+id/email"
        android:text="Email"
        android:layout_below="@+id/updateWeight"/>

    <Button
        android:id="@+id/saveInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/createaccount_submit_button"
        android:width="150dp"
        android:fontFamily="@font/y_medium"
        android:textSize="18dp"
        android:text="Save Info"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:onClick="saveInfo"
        android:layout_below="@+id/email" />


</RelativeLayout>