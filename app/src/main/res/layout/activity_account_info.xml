<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/firstName"
        android:text="First Name"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lastName"
        android:text="Last Name"
        android:textSize="20dp"
        android:layout_below="@+id/firstName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/age"
        android:text="Age"
        android:textSize="20dp"
        android:layout_below="@+id/lastName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="50dp"
        android:id="@+id/gender"
        android:layout_below="@+id/age"
        android:textSize="20dp"
        android:text="Male"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="50dp"
        android:id="@+id/updateHeight"
        android:layout_below="@+id/gender"
        android:entries="@array/height_array"
        android:spinnerMode="dropdown"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/updateWeight"
        android:hint="Weight"
        android:layout_below="@+id/updateHeight"/>

    <Button
        android:id="@+id/saveInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/createaccount_submit_button"
        android:width="150dp"
        android:fontFamily="@font/y_medium"
        android:textSize="18dp"
        android:text="Save Info"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:onClick="saveInfo"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"
        android:text="Email"
        android:textSize="20dp"
        android:layout_below="@+id/updateWeight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/password"
        android:text="Password"
        android:textSize="20dp"
        android:layout_below="@+id/email"/>

</RelativeLayout>