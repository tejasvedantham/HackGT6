<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userpng"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/firstName"
        android:hint="First Name"
        android:layout_below="@id/userpng"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/lastName"
        android:hint="Last Name"
        android:layout_below="@+id/firstName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="100dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/age"
        android:hint="Age"
        android:layout_below="@+id/lastName"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textAlignment="center"

        android:id="@+id/gender"
        android:layout_below="@+id/age"
        android:entries="@array/gender_array"
        android:spinnerMode="dropdown"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:id="@+id/height"
        android:layout_below="@+id/gender"
        android:entries="@array/height_array"
        android:spinnerMode="dropdown"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="100dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/weight"
        android:hint="Weight"
        android:layout_below="@+id/height"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_below="@+id/weight"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/y_light"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/email"/>

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/createaccount_submit_button"
        android:width="150dp"
        android:fontFamily="@font/y_medium"
        android:textSize="18dp"
        android:text="Create Account"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:onClick="createAccountAndPush"
        android:layout_below="@id/password"/>

</RelativeLayout>