<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Check in at our local\nHealthyHotspotsâ„¢!"
        android:fontFamily="@font/y_medium"
        android:layout_marginTop="75dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#000352"
        android:id="@+id/checkInText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="This includes local gyms, farmers'\nmarkets, and sports events"
        android:fontFamily="@font/y_light"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#204200"
        android:layout_below="@id/checkInText"
        android:id="@+id/checkInText2"/>

    <Button
        android:id="@+id/scanQRButton"
        android:background="@drawable/scan_qr_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Scan QR"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@id/checkInText2"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp" />


</RelativeLayout>